<%# app/views/kaminari/_paginator.html.erb %>
<%# Este partial será usado pelo `paginate @collection` %>

<nav class="mt-6 flex justify-center">
  <ul class="inline-flex items-center space-x-1">

    <%# Botão "Anterior" %>
    <% if paginator.current_page > 1 %>
      <li>
        <%= link_to raw("&laquo;"), url_for(params.merge(page: paginator.current_page - 1)), class: "px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
      </li>
    <% end %>

    <%# Números das páginas %>
    <% paginator.each_page do |page| %>
      <% if page %>
        <% if page == paginator.current_page %>
          <li class="px-3 py-1 bg-blue-500 text-white rounded"><%= page %></li>
        <% else %>
          <li>
            <%= link_to page, url_for(params.merge(page: page)), class: "px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
          </li>
        <% end %>
      <% else %>
        <li class="px-3 py-1 text-gray-400">…</li>
      <% end %>
    <% end %>

    <%# Botão "Próximo" %>
    <% if paginator.current_page < paginator.total_pages %>
      <li>
        <%= link_to raw("&raquo;"), url_for(params.merge(page: paginator.current_page + 1)), class: "px-3 py-1 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
      </li>
    <% end %>

  </ul>
</nav>
