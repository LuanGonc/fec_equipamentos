<%= form_with(model: loan) do |form| %>
  <% if loan.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
        <% loan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :equipment_id, "Equipamento" %>
<%= form.collection_select :equipment_id, Equipment.all, :id, :identifier, prompt: "Selecione um equipamento" %>
  </div>

  <div>
    <%= form.label :collaborator_id, "Colaborador" %>
    <%= form.collection_select :collaborator_id, Collaborator.all, :id, :name, prompt: "Selecione um colaborador" %>
  </div>

  <div>
    <%= form.label :loan_action, "Tipo de Ação" %>
    <%= form.select :loan_action, Loan.loan_actions.keys.map { |a| [a.titleize, a] }, prompt: "Selecione a ação" %>

  </div>

  <div>
    <%= form.label :loan_date, style: "display: block" %>
    <%= form.date_field :loan_date %>
  </div>

  <div>
    <%= form.label :return_date, style: "display: block" %>
    <%= form.date_field :return_date %>
  </div>

  <div>
    <%= form.label :return_reason, style: "display: block" %>
    <%= form.text_area :return_reason %>
  </div>

  <div>
    <%= form.label :discard_date, style: "display: block" %>
    <%= form.date_field :discard_date %>
  </div>

  <div>
    <%= form.label :discard_reason, style: "display: block" %>
    <%= form.text_area :discard_reason %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
